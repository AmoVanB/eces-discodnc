<project name="DiscoDNCjar" basedir="." default="jar">

    <property name="src.dir" value="src"/>
    <property name="classes.dir" value="bin"/>
    <property name="jar.dir" value="."/>
    <property name="lib.dir" value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="*.jar"/>
    </path>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath"/>
    </target>

    <target name="jar" depends="compile">
        <jar jarfile="DiscoDNC.jar" includes="*.class" basedir="bin">
            <fileset dir="${classes.dir}">
                <include name="de/unikl/cs/disco/curves/"/>
                <include name="de/unikl/cs/disco/curves/dnc/"/>
                <include name="de/unikl/cs/disco/curves/mpa_rtc_pwaffine"/>
                <include name="de/unikl/cs/disco/minplus/"/>
                <include name="de/unikl/cs/disco/minplus/dnc/"/>
                <include name="de/unikl/cs/disco/misc/"/>
                <include name="de/unikl/cs/disco/nc/"/>
                <include name="de/unikl/cs/disco/nc/analyses/"/>
                <include name="de/unikl/cs/disco/nc/arrivalbounds/"/>
                <include name="de/unikl/cs/disco/nc/bounds/"/>
                <include name="de/unikl/cs/disco/network/"/>
                <include name="de/unikl/cs/disco/numbers/"/>
                <include name="de/unikl/cs/disco/numbers/implementations/"/>
                <include name="de/unikl/cs/disco/numbers/values/"/>
            </fileset>
        </jar>
    </target>

</project>